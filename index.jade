    meta(name="viewport", content="width=device-width, initial-scale=1")
    
    link(rel="stylesheet", href="assets/css/main.css")
    
  body
    
    header#landing
      .wrapper
        nav
          a(href="index.html", alt="Smoke Cloud")
            .logo
              img(src="assets/img/icons/logo.svg")
          
          ul
            li
              a(href="#home") Pradžia
            li
              a(href="#shop") Parduotuvė
            li
